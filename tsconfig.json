{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@user/*": ["src/apps/user/*"],
      "@organizer/*": ["src/apps/organizer/*"],
      "@admin/*": ["src/apps/admin/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
